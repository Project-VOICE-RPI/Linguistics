@ARTICLE{Brook99,
  author    = {Vikram K. Jaswal, Allison Wayne, Hudson Golino},
  title     = {Eye-tracking reveals agency in assisted autistic communication},
  journal   = {Scientific Reports},
  year      = {2020},
  volume    = {10},
  number    = {7882},
  month     = {May},
  annote    = { Letterboards are a very common way to assist non-verbal people communicate, but it's a very controversial method to prove higher levels of literacy since the person assisting them through that process could cue them into certain behaviors. This study used eye-tracking to see what letters they focused their gaze on to spell instead. The study reported that the method was very successful, they rarely made any spelling errors, fixated their vision on most letters before pointing to them, and their response time "reflected planning and production processes characteristic of fluent spelling in non-autistic typists" .}
}

@inproceedings{ALMVD24,
  author = {Nazari, Ahmadreza and Alabood, Lorans and Rathbun, Molly Kay and Jaswal, Vikram K. and Krishnamurthy, Diwakar},
  title = {Evaluating Gaze Interactions within AR for Nonspeaking Autistic Users},
  journal = {VRST '24: Proceedings of the 30th ACM Symposium on Virtual Reality Software and Technology},
  year = {2024},
  article = {36},
  month = {October},
  publisher = {Association for Computing Machinery},
  annote    = { This paper explores the potential of eye gaze interactions as an accessible communication tool for nonspeaking autistic individuals within an Augmented Reality (AR) environment. Using the HoloLens 2, the authors developed HoloGaze, an eye gaze-based system that allows users to select targets either by fixating on them or using a combination of gaze and a physical button ("gaze-click"). The study highlights the promise of gaze-based AR systems while addressing the challenges and improvements needed for future use. Some improvements include better device calibrations and a bigger, more diverse participant pool. The study was only done with 14 participants, all being male. Overall, gaze-based interactions could offer a viable communication tool for nonspeaking autistic individuals.}
}

@ARTICLE{AD23,
  author    = {Antonio Iannone, Daniele Giansanti},
  title     = {Breaking Barriers—The Intersection of AI and Assistive Technology in Autism Care: A Narrative Review},
  journal   = {Journal of Personalized Medicine},
  year      = {2023},
  volume    = {14},
  month     = {December},
  annote    = { This paper analyzes the integration of artificial intelligence (AI) with assistive technologies (ATs) for autism, highlighting developments in AI-robotics and wearable devices, such as smart glasses, aimed at improving communication and social engagement for individuals with autism. There are also mobile apps that are AI-powered to provide more support. Currently, “researchers are prioritizing innovation over establishing a solid presence within the healthcare domain, where issues such as regulation and acceptance demand increased attention.” Challenges include the diverse needs within the autism spectrum, ethical concerns about privacy and data security, and the potential lack of human empathy in AI interventions.}
}

@ARTICLE{LOACGAMASBMA18,
  author    = {Lima Antão JYF, Oliveira ASB, Almeida Barbosa RT, Crocetta TB, Guarnieri R, Arab C, Massetti T, Antunes TPC, Silva APD, Bezerra ĹMP, Mello Monteiro CB, Abreu LC},
