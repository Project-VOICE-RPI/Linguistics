@ARTICLE{Brook99,
  author    = {Vikram K. Jaswal, Allison Wayne, Hudson Golino},
  title     = {Eye-tracking reveals agency in assisted autistic communication},
  journal   = {Scientific Reports},
  year      = {2020},
  volume    = {10},
  number    = {7882},
  month     = {May},
  annote    = { Letterboards are a very common way to assist non-verbal people communicate, but it's a very controversial method to prove higher levels of literacy since the person assisting them through that process could cue them into certain behaviors. This study used eye-tracking to see what letters they focused their gaze on to spell instead. The study reported that the method was very successful, they rarely made any spelling errors, fixated their vision on most letters before pointing to them, and their response time "reflected planning and production processes characteristic of fluent spelling in non-autistic typists" .}
}

@ARTICLE{Brook99,
  author    = {Farzana, Walia, et al},
  title     = {Technological evolvement in AAC modalities to foster communications of verbally challenged ASD children: A systematic review},
  journal   = {IEEE Access},
  year      = {2021},
  volume    = {4},
  number    = {2016},
  month     = {January},
  annote    = { There are a variety of different methods currently employed to help with communication between people with ASD and general communicative disabilities, all considered under the AAC, or Augmented and Alternative methods of Communication. The methods being compared and discussed in this paper are speech generating devices (SGD), mobile applications, picture exchange communication systems (PECS), AI/ML, and augmented reality (AR) based applications. The paper highlights the conveniences and inconveniences of each method detailed in various studies of each method, and explores the paradigm shift from traditional PECS methods to more AI/ML and AR based methods.}
}

@ARTICLE{Brook99,
